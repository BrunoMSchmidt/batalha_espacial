    "@mui/icons-material": "^5.8.2",
    "@mui/material": "^5.8.2",
    "electron-is-dev": "^2.0.0",
    "immer": "^9.0.14",
    "nanoid": "^3.3.4",
    "react": "^18.1.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.31.3",
    "react-router-dom": "^6.3.0",
    "use-immer": "^0.7.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.38",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "@types/sass": "^1.43.1",
    "@types/styled-components": "^5.1.25",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "electron": "^18.3.1",
    "electron-builder": "^23.0.3",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.7.2",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4",
    "webpack-bundle-analyzer": "^4.5.0"
  },
  "main": "public/main.ts",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder -c.extraMetadata.main=build/main.ts",
    "release": "npm run build && electron-builder --linux --win --mac --x64 --ia32 --publish never",
    "build": "npm run react-build && npm run electron-build -- -p never",
    "publish": "npm run react-build && npm run electron-build -- -p always",
    "start": "concurrently -k \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "analyze": "node scripts/analyze_build_bundle.js"
  },
  "build": {
    "extends": null,
    "appId": "com.unoesc.batalha_astral",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "icon": "public/icon.png"
    },
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
